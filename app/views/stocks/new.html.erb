<h1>Register</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@stock, url: '/stocks') do |f| %>

            <%= f.label :name %>
            <%= f.text_field :name %>

            <%= f.label :code %>
            <%= f.text_field :code %>

            <%= f.label :sendFlag %>
            <%= f.check_box :sendFlag %>

            <%= f.submit "Create", data: {disable_with: 'Createing...'}, class: "btn btn-primary" %>

        <% end %>
    </div>
</div>
<%= link_to "Back", root_path %>
