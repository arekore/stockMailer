<h1>Register Mail</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user, url: '/users') do |f| %>

            <div class="form-group">
                <%= f.label "Mail Address" %>
                <%= f.text_field :mail, class: 'form-control', placeholder: 'example@hoge.com' %>
            </div>

            <div class="custom-control custom-checkbox">
                <%= f.check_box :sendFlag , class: "custom-control-input", id: "flag", checked: 'checked'%>
                <%= f.label "Activate", class: "custom-control-label", for: "flag" %>
            </div>
            <hr/>
            <%= f.submit "Create", data: {disable_with: 'Createing...'}, class: "btn btn-primary" %>
            <%= link_to "Cancel", root_path, class: 'btn btn-danger', title: 'Return to Top' %>

        <% end %>
    </div>
</div>
